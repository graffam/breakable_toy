<% if @kits %>
    <%= form_for(@order) do |f| %>
          <%= f.fields_for :kit_orders, @order.kit_orders do |ff| %>
            <%= ff.label :name, ff.object.name %>
            <%= ff.hidden_field :kit_id, value: ff.object.kit_id %>
            <%= ff.hidden_field :name, value: ff.object.name %>
            <%= ff.number_field :amount, in: 0..30 %>
          <% end %>
      <%= f.label :comment %>
      <%= f.text_field :comment %>

      <%= f.label :needed_by %>
      <%= f.date_field :needed_by %>
      <%= f.hidden_field :machine_id, value: @machine.id %>
      <%= f.submit "Submit" %>
    <% end %>
<% else %>
<h1>Pick a Machine</h1>
  <%= form_tag(new_order_path, method: "get") do %>
    <%= collection_select(:machine, :id, Machine.all, :id, :name) %>
    <%= submit_tag "Submit" %>
  <% end %>
<% end %>
